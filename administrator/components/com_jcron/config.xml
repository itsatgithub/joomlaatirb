<?xml version="1.0" encoding="utf-8"?>
<config>
	<params>
		<param name="cronenable" type="radio" default="0" label="Enable CRON RUN" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="email" type="text" default="" label="Send Cron Logs to Email" description="" />
		
		<param name="cemail" type="radio" default="0" label="Activate Email Logs" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		
		<param name="dlog" type="radio" default="1" label="Enable Database Logs" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
	</params>
</config>