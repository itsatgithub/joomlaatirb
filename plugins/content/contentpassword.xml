<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content" method="upgrade">
	<name>Content - ContentPassword</name>
	<author>ProgAndy</author>
	<creationDate>September 2010</creationDate>
	<copyright>(C) 2008 Prog@ndy. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>admin@progandy.co.cc</authorEmail>
	<authorUrl>progandy.co.cc</authorUrl>
	<version>1.7.3</version>
	<description>Displays password dialog in content items.</description>
	<files>
		<filename plugin="contentpassword">contentpassword.php</filename>
	</files>
	<languages>
		<language tag="de-DE">language/de-DE/de-DE.plg_content_contentpassword.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_contentpassword.ini</language>
	</languages>
	<params>
		<param name="enabled" type="radio" default="1" label="Enable Plugin" description="PARAMENABLED">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	    <param name="password" type="text" label="Password" default="Password" 
			description='default-password for protected contentitems' />
		<param name="session" type="radio" default="0" label="Use Session" description="Save successful login in Session">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="alt_uri" type="radio" default="0" label="Alternat. URI" description="Use alternatve Method to create form-URI">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
